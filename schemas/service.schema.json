{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://codex-aura.org/schemas/service.schema.json",
  "title": "Service",
  "description": "Represents a service in the Service Registry",
  "type": "object",
  "required": ["service_id", "name", "repo_id"],
  "properties": {
    "service_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the service"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name of the service"
    },
    "repo_id": {
      "type": "string",
      "format": "uuid",
      "description": "ID of the primary repository for this service"
    },
    "description": {
      "type": "string",
      "description": "Optional description of the service and its purpose"
    }
  },
  "additionalProperties": false
}