{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://codex-aura.org/schemas/context-response.schema.json",
  "title": "ContextResponse",
  "description": "Response model for context endpoint",
  "type": "object",
  "required": ["context_nodes", "total_nodes", "truncated"],
  "properties": {
    "context_nodes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ContextNode"
      },
      "description": "List of context nodes with relevance scores"
    },
    "total_nodes": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of nodes found in the context"
    },
    "truncated": {
      "type": "boolean",
      "description": "Whether the results were truncated due to max_nodes limit"
    }
  },
  "definitions": {
    "ContextNode": {
      "type": "object",
      "required": ["id", "type", "path", "relevance"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier of the node"
        },
        "type": {
          "type": "string",
          "enum": ["file", "class", "function"],
          "description": "Type of the node"
        },
        "path": {
          "type": "string",
          "description": "Relative path to the file containing this node"
        },
        "code": {
          "type": "string",
          "description": "Source code content (if include_code was true in request)"
        },
        "relevance": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Relevance score based on distance from entry points"
        }
      }
    }
  }
}